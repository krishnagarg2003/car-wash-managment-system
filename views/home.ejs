    <script>
        // Firebase authentication check on page load
        firebase.auth().onAuthStateChanged(user => {
            if (user) {
                // User is logged in
                document.getElementById("profile-section").style.display = "inline"; // Show profile link
                document.getElementById("login-section").style.display = "none";    // Hide login button
            } else {
                // User is not logged in
                document.getElementById("profile-section").style.display = "none";  // Hide profile link
                document.getElementById("login-section").style.display = "inline";  // Show login button
            }
        });
    </script>
